<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.julio.solucion5.Pantalla3"
    android:background="#ffefca">

    <TextView android:text="PRIMERA BANDA" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtvpb"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#ff0b0f" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALCULAR"
        android:id="@+id/btncalculo1"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#ff0b0f"
        android:background="#00ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/txtvsb"
        android:layout_alignEnd="@+id/txtvsb" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spin1"
        android:layout_below="@+id/txtvpb"
        android:layout_alignRight="@+id/spin3"
        android:layout_alignEnd="@+id/spin3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEGUNDA BANDA"
        android:id="@+id/txtvsb"
        android:layout_below="@+id/spin1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff0b0f"
        android:textStyle="bold"
        android:textSize="20dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spin2"
        android:layout_below="@+id/txtvsb"
        android:layout_alignRight="@+id/spin1"
        android:layout_alignEnd="@+id/spin1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TERCERA BANDA"
        android:id="@+id/txtvtb"
        android:layout_below="@+id/spin2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#ff0b0f" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spin3"
        android:layout_below="@+id/txtvtb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CUARTA BANDA"
        android:id="@+id/txtvcb"
        android:layout_below="@+id/spin3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff0b0f"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spin4"
        android:layout_below="@+id/txtvcb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AQUÍ"
        android:id="@+id/btnMostrar"
        android:background="#00ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#ff0b0f"
        android:layout_below="@+id/spin4"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;&lt;"
        android:id="@+id/btnvolver"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="#ff0b0f"
        android:background="#00ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
